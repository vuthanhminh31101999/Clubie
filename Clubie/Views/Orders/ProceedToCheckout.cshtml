@model Clubie.Models.Order

@{
    ViewBag.Title = "ProceedToCheckout";
}

<h2>ProceedToCheckout</h2>

<h1>Select a shipping address</h1>

<form class="form-horizontal" action="/Orders/AddOrder">
    <div class="form-group">
        <label class="control-label col-md-2" for="city">City</label>
        <input class="form-control col-md-10" type="text" id="city" name="city">
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="province">Province</label>
        <input class="form-control col-md-10" type="text" id="province" name="province">
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="streetAddress">Street Address</label>
        <input class="form-control col-md-10" type="text" id="streetAddress" name="streetAddress">
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="phoneNumber">Phone Number</label>
        <input class="form-control col-md-10" type="number" id="phoneNumber" name="phoneNumber" maxlength="11">
    </div>
    <div>
        <input class="btn btn-default" type="submit" value="Submit">
    </div>
</form> 